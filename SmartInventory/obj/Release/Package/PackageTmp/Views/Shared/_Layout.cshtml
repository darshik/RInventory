    <link href="/assets/css/header-1.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/color_scheme/blue.css" rel="stylesheet" type="text/css" id="color_scheme" />

</head>
<body class="smoothscroll boxed pattern2 enable-animation">




<div id="wrapper">

    <!-- Top Bar -->
    <div id="topBar" style="background-color: #045743;padding-left: 30px" class="padding-20">

        <!-- Logo -->
        <a class="logo" href="/">
            <img src="/assets/images/unbc.jpg" style="width: 32%;margin-left: 35px"/>
            @*<h1 style="color: #fff" class="bold font-raleway wow fadeInUp animated">Inventory Management System</h1>*@
        </a>

    </div>
    <!-- /Top Bar -->

    <div id="header" class="sticky dark  header-sm clearfix">

        <!-- TOP NAV -->
        <header id="topNav">
            <div class="container">

                <!-- Mobile Menu Button -->
                @*<button class="btn btn-mobile" data-toggle="collapse" data-target=".nav-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>*@

                <!-- BUTTONS -->
                <ul class="pull-right nav nav-pills nav-second-main">


                    @if (Session["EmailId"] != null)
                    {
                        <li style="color: #fff">
                            <a style="text-decoration: underline" href="/UserAccount/Settings">
                               Welcome: @Session["EmailId"]
                            </a>
                           
                        </li>
                        <li>
                            <a href="/UserAccount/LogOff">
                                <i class="fa fa-lock"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        @*<li>
                            <a href="/UserAccount/Login">
                                <i class="fa fa-lock"></i> Login
                            </a>
                        </li>*@
                    }



                </ul>
                <!-- /BUTTONS -->
                <!--
                Top Nav

                AVAILABLE CLASSES:
                submenu-dark = dark sub menu
                -->
                <div class="navbar-collapse pull-left nav-main-collapse collapse" style="min-height: 50px">
                    <nav class="nav-main">

                   
                        <ul id="topMain" class="nav nav-pills nav-main">
                           
                                <!-- HOME -->
                                @if (Session["EmailId"] != null)
                                {
                                    <li>
                                        <a href="/Home">
                                            Search Item
                                        </a>
                                    </li>
                                }

                            @if (Session["EmailId"] != null && Session["Role"] != null && Session["Role"].Equals("admin"))
                            {
                                <li>
                                    <a href="/Equipments/Create">
                                        Add Item
                                    </a>
                                </li>
                            }

                            @if (Session["EmailId"] != null && Session["Role"] != null && Session["Role"].Equals("admin"))
                            {
                                <li>
                                    <a href="/UserAccount/Create">
                                        Add User
                                    </a>
                                </li>
                            }
                            @if (Session["EmailId"] != null && Session["Role"]!=null && Session["Role"].Equals("admin"))
                            {
                                <li>
                                    <a href="/UserAccount/List">
                                        User List
                                    </a>
                                </li>
                            }

                         @if (Session["EmailId"] != null)
                         {
                            <li>
                                <a href="/Contact">
                                    Contact
                                </a>
                            </li>

                         }
                          
                        </ul>

                    </nav>
                </div>

            </div>
        </header>
        <!-- /Top Nav -->

    </div>
    <div style="min-height: 400px; background-color: #fff">

        @RenderBody()
    </div>
    <footer id="footer">
        

        <div class="copyright">
            <div class="container">
                <ul class="pull-right nomargin list-inline mobile-block">
                    <li><a href="#">Terms &amp; Conditions</a></li>
                    <li>•</li>
                    <li><a href="#">Privacy</a></li>
                </ul>
                © All Rights Reserved
            </div>
        </div>
    </footer>
</div>
    <script type="text/javascript">var plugin_path = '';</script>
    <script src="/assets/plugins/index.htmlbootstrap/js/bootstrap.min.js"></script>
