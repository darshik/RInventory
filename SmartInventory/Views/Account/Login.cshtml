@using SmartInventory.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<section>
    <div class="container">

        <div class="row">

            <div class="col-md-6 col-md-offset-3">

                @if (TempData["Error"] != null)
                {
                    <div class="error-message">
                        @TempData["Error"]
                    </div>
                    
                }
               

                <div class="box-static box-border-top padding-30">
                    <div class="box-title margin-bottom-30">
                        <h2 class="size-20">I'm a returning customer</h2>
                    </div>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "nomargin", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="clearfix">

                            <!-- Email -->
                            <div class="form-group">
                                <input type="text" name="Email" class="form-control" placeholder="Email" required="">
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                <input type="password" name="Password" class="form-control" placeholder="Password" required="">
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <!-- Inform Tip -->
                                @*<div class="form-tip pt-20">
                                        <a class="no-text-decoration size-13 margin-top-10 block" href="#">Forgot Password?</a>
                                    </div>*@
                                <div class="form-tip pt-20">
                                    @Html.ActionLink("Register as a new user", "Register")
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6 col-xs-6 text-right">

                                <button class="btn btn-primary">OK, LOG IN</button>

                            </div>

                        </div>

                    }

                </div>
            </div>
        </div>

    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .error-message ul {
        list-style: none;
        background-color: #f2dede;
        color:  #b94a48;
        padding: 20px;
    }
</style>