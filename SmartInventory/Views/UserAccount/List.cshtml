@model List<SmartInventory.InventoryLogin>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading panel-heading-transparent">
                        <h2 class="panel-title">Application Users</h2>
                    </div>

                    <div style="padding:50px" class="panel-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger margin-bottom-30">
                                <!-- DANGER -->
                                <strong>@TempData["Error"]</strong>
                            </div>
                        }
                        <table class="table table-bordered table-striped table-vertical-middle">
                            <thead style="background-color: #045743;color:#fff">
                                <tr>
                                    <th>Email ID</th>
                                    <th>Role</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td><a style="text-decoration: underline;font-weight: bold" href="/UserAccount/Edit?id=@user.EmailID">@user.EmailID</a> </td>
                                        <td>@user.Role</td>
                                        <td>
                                            @if (Session["EmailId"] != null && user.EmailID.Equals(Session["EmailId"]))
                                            {
                                                <span class="label label-warning">Current Logged in User </span>
                                            }
                                            else
                                            {
                                                <a href="/UserAccount/Delete?id=@user.EmailID" class="btn btn-primary btn-sm">Delete</a>                                            }
                                        </td>

                                    </tr>
                                }



                            </tbody>
                        </table>
                        <br/>

                        <a href="/UserAccount/Create" class="btn btn-primary">Add New User</a>                                            

                    </div>


                </div>
            </div>
        </div>
    </div>
</section>